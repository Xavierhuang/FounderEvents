// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Authentication
  accounts Account[]
  sessions Session[]

  // ScheduleShare data (private)
  events            CalendarEvent[]
  linkedInProfiles  LinkedInProfile[]
  messageTemplates  MessageTemplate[]
  routePlans        RoutePlan[]
  
  // Public event platform
  profile           UserProfile?
  organizedEvents   PublicEvent[]     @relation("EventOrganizer")
  eventRegistrations EventRegistration[]
  eventComments     EventComment[]
  eventLikes        EventLike[]
  
  // Settings
  preferences       UserPreferences?
  calendarSettings  CalendarSettings?

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// ScheduleShare Models

model CalendarEvent {
  id               String    @id @default(cuid())
  title            String
  startDate        DateTime
  endDate          DateTime
  location         String?
  notes            String?   @db.Text
  eventIdentifier  String?   // For Google Calendar integration
  
  // AI Extraction data
  extractedInfo    Json?     // Store ExtractedEventInfo as JSON
  confidence       Float?
  
  // Relationships
  userId           String
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  linkedProfiles   LinkedInProfile[]
  routeSegments    RouteSegment[]
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@map("calendar_events")
}

model LinkedInProfile {
  id              String    @id @default(cuid())
  profileURL      String
  name            String
  company         String?
  title           String?
  notes           String?   @db.Text
  linkedDate      DateTime  @default(now())
  
  // Relationships
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  linkedEventId   String?
  linkedEvent     CalendarEvent? @relation(fields: [linkedEventId], references: [id], onDelete: SetNull)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("linkedin_profiles")
}

model MessageTemplate {
  id          String   @id @default(cuid())
  name        String
  template    String   @db.Text
  isDefault   Boolean  @default(false)
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("message_templates")
}

model RoutePlan {
  id              String    @id @default(cuid())
  name            String
  startLocation   Json?     // LocationCoordinate as JSON
  totalTime       Int       // in seconds
  totalCost       Float
  
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  segments        RouteSegment[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("route_plans")
}

model RouteSegment {
  id                String    @id @default(cuid())
  fromLocation      Json      // LocationCoordinate as JSON
  toLocation        Json      // LocationCoordinate as JSON
  transportMode     String    // TransportationMode enum as string
  travelTime        Int       // in seconds
  cost              Float
  instructions      String    @db.Text
  departureTime     DateTime
  arrivalTime       DateTime
  
  routePlanId       String
  routePlan         RoutePlan @relation(fields: [routePlanId], references: [id], onDelete: Cascade)
  eventId           String?
  event             CalendarEvent? @relation(fields: [eventId], references: [id], onDelete: SetNull)
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("route_segments")
}

model GarysGuideEvent {
  id              String    @id @default(cuid())
  title           String
  date            String
  time            String
  price           String
  venue           String
  speakers        String    @db.Text
  url             String
  isGaryEvent     Boolean   @default(false)
  isPopularEvent  Boolean   @default(false)
  week            String
  
  // Metadata
  scrapedAt       DateTime  @default(now())
  isActive        Boolean   @default(true)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("garys_guide_events")
}

model UserPreferences {
  id                    String   @id @default(cuid())
  timezone              String   @default("America/New_York")
  theme                 String   @default("light") // light, dark, system
  defaultEventDuration  Int      @default(3600)    // 1 hour in seconds
  weekStartsOn          Int      @default(1)       // Monday = 1, Sunday = 0
  
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("user_preferences")
}

model CalendarSettings {
  id                      String   @id @default(cuid())
  googleCalendarEnabled   Boolean  @default(false)
  googleCalendarId        String?  // Primary calendar ID
  autoSync                Boolean  @default(false)
  syncInterval            Int      @default(3600) // 1 hour in seconds
  
  userId                  String   @unique
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@map("calendar_settings")
}

// Public Event Platform Models

model UserProfile {
  id          String   @id @default(cuid())
  username    String   @unique
  displayName String
  bio         String?  @db.Text
  avatar      String?
  coverImage  String?
  
  // Social links
  website     String?
  twitter     String?
  linkedin    String?
  instagram   String?
  
  // Stats
  totalEvents Int      @default(0)
  totalAttendees Int   @default(0)
  
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("user_profiles")
}

model PublicEvent {
  id              String    @id @default(cuid())
  slug            String    @unique
  title           String
  description     String    @db.Text
  shortDescription String?
  
  // Event details
  startDate       DateTime
  endDate         DateTime
  timezone        String    @default("America/New_York")
  
  // Location
  locationType    String    // PHYSICAL, VIRTUAL, HYBRID
  venueName       String?
  venueAddress    String?
  venueCity       String?
  venueState      String?
  venueZipCode    String?
  virtualLink     String?
  
  // Media
  coverImage      String?
  images          Json?     // Array of image URLs
  
  // Registration
  isPublic        Boolean   @default(true)
  requiresApproval Boolean  @default(false)
  capacity        Int?
  registrationDeadline DateTime?
  price           Float     @default(0)
  currency        String    @default("USD")
  
  // Status
  status          String    @default("DRAFT") // DRAFT, PUBLISHED, CANCELLED, COMPLETED
  visibility      String    @default("PUBLIC") // PUBLIC, PRIVATE, UNLISTED
  isFeatured      Boolean   @default(false)
  
  // SEO
  metaTitle       String?
  metaDescription String?
  tags            Json?     @default("[]")
  
  // Stats
  viewCount       Int       @default(0)
  registrationCount Int     @default(0)
  likeCount       Int       @default(0)
  shareCount      Int       @default(0)
  
  // Relationships
  organizerId     String
  organizer       User      @relation("EventOrganizer", fields: [organizerId], references: [id], onDelete: Cascade)
  
  categories      EventCategory[]
  registrations   EventRegistration[]
  comments        EventComment[]
  likes           EventLike[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  publishedAt     DateTime?

  @@index([slug])
  @@index([organizerId])
  @@index([status])
  @@index([startDate])
  @@map("public_events")
}

model EventCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  icon        String?
  color       String?
  
  events      PublicEvent[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("event_categories")
}

model EventRegistration {
  id              String    @id @default(cuid())
  
  // Attendee info
  firstName       String
  lastName        String
  email           String
  
  // Registration details
  status          String    @default("CONFIRMED") // PENDING, CONFIRMED, CANCELLED, WAITLIST
  ticketType      String?
  quantity        Int       @default(1)
  totalAmount     Float     @default(0)
  
  // Payment
  paymentStatus   String?   // PENDING, PAID, REFUNDED
  paymentId       String?
  
  // Check-in
  checkedIn       Boolean   @default(false)
  checkedInAt     DateTime?
  
  // Relationships
  userId          String?
  user            User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  eventId         String
  event           PublicEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([eventId, email])
  @@index([eventId])
  @@index([userId])
  @@index([email])
  @@map("event_registrations")
}

model EventComment {
  id          String    @id @default(cuid())
  content     String    @db.Text
  
  // Relationships
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventId     String
  event       PublicEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  // Threading
  parentId    String?
  parent      EventComment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies     EventComment[] @relation("CommentReplies")
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([eventId])
  @@index([userId])
  @@map("event_comments")
}

model EventLike {
  id          String    @id @default(cuid())
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventId     String
  event       PublicEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())

  @@unique([userId, eventId])
  @@index([eventId])
  @@index([userId])
  @@map("event_likes")
}

// Enums (stored as strings in the database)
enum TransportationMode {
  WALKING
  SUBWAY
  BUS
  TAXI
  RIDESHARE
  DRIVING
}

enum SharingMethod {
  ICS_FILE
  EMAIL
  MESSAGE
  LINK
}

enum EventType {
  REGULAR
  POPULAR
  GARY_EVENT
}
